<h1>Projects#show</h1>
<% if logged_in? %>
<div class="pro-show">
  <h3>Created Card(<%= current_user.name %>)</h3>
</div>
<% else %>
<h3>ログインしてください</h3>
<div id ="login-form">
<%= form_for(:session, url: login_path) do |f| %>
  <!-- email -->
  <%= f.label :Email %>
  <%= f.email_field :email %>
  <!-- password -->
  <%= f.label :Password %>
  <%= f.password_field :password %>
  <!-- checkbox -->
  <%= f.label :Remember_me do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
  <% end %>
  <%= link_to("Forget password?",new_password_reset_path) %>
  <!-- submit -->
  <%= f.submit "Log in" %>
<% end %>
</div>
<% end %>
