<% if logged_in? %>
<div class="note-container">
  <div class="note">
    <div class="card-show">
      <h2><%= @card.subject %></h2>
      <% if @card.card_picture? %>
        <p class="pro-image"><%= image_tag @card.card_picture.url, :size => "130x130" %></p>
      <% else %>
        <p class="pro-image"><%= image_tag 'default.png', :size => "130x130" %></p>
      <% end %>
      <%= qiita_markdown(@card.content) %>
      <h2><%= link_to "Edit", edit_card_path(@card) %></h2>
      <% if current_user?(@card.user) %>
        <h2><%= link_to "Delete", @card, method: :delete, data: { confirm: "Are you sure?" } %></h2>
      <% end %>
      <%= link_to 'Back', project_path(@project) %>
    </div>
  </div>
</div>
<div id="cover" class="hidden"></div>
<% else %>
  <h3>ログインしてください</h3>
  <%= render 'shared/login_form' %>
<% end %>
