<div>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/errors', object: f.object %>
    <!-- name -->
    <%= f.label :name %>
    <%= f.text_field :name %>
    <!-- email -->
    <%= f.label :email %>
    <%= f.email_field :email %>
    <!-- password -->
    <%= f.label :password %>
    <%= f.password_field :password %>
    <!-- password_confirmation -->
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
    <!-- submit -->
    <%= f.submit yield(:button_text) %>
  <% end %>
</div>
