<% provide(:title, "Home") %>
<% if logged_in? %>
<!-- ログイン済みの場合のIndex -->
<section class="scratch-note">
  <h1 class="pro-title">Coming Soon...</h1>
</section>
<% else %>
<!-- ログインされていない場合のIndex -->
<section class="nolog-container">
  <div class="main-contain">
    <div class="signup">
      <h2>Signup</h2>
    <% provide(:button_text, 'Create my account') %>
    <%= render 'shared/user_form' %>
    </div>
    <div class="login">
      <h2>Log in</h2>
      <div id ="login-form">
      <%= form_for(:session, url: login_path) do |f| %>
        <!-- email -->
        <%= f.label :Email %>
        <%= f.email_field :email %>
        <!-- password -->
        <%= f.label :Password %>
        <%= f.password_field :password %>
        <!-- checkbox -->
        <%= f.label :Remember_me do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
        <%= link_to("Forget password?",new_password_reset_path) %>
        <!-- submit -->
        <%= f.submit "Log in" %>
      <% end %>
      </div>
    </div>
    <div class="note-start">
      <h1 class="hero">Share notes For You and Team</h1>
      <button class="hero-button">はじめる</button>
    </div>
  </div>
</section>
<% end %>
