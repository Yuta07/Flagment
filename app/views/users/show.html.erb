<h1 style="margin-bottom:80px;">Users#show</h1>
<% if logged_in? %>
<%= link_to 'Edit', edit_user_path(current_user) %>
<p><%= @current_user.name %></p>
<!-- application helperからメソッド呼び出し -->
<%= image_for(@current_user, :size => "120x120") %>
<p><%= @current_user.email %></p>
<div class="pro-show">
  <% if @user.projects.any? %>
  <h3>Created project(<%= @user.projects.count %>)</h3>
  <%= link_to 'All Project', root_path %>
  <% end %>
</div>
<% else %>
<h3>ログインしてください</h3>
<div id ="login-form">
<%= form_for(:session, url: login_path) do |f| %>
  <!-- email -->
  <%= f.label :Email %>
  <%= f.email_field :email %>
  <!-- password -->
  <%= f.label :Password %>
  <%= f.password_field :password %>
  <!-- checkbox -->
  <%= f.label :Remember_me do %>
    <%= f.check_box :remember_me %>
    <span>Remember me on this computer</span>
  <% end %>
  <%= link_to("Forget password?",new_password_reset_path) %>
  <!-- submit -->
  <%= f.submit "Log in" %>
<% end %>
</div>
<% end %>
